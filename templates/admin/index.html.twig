{% extends 'admin/base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block admin_body %}

<div class="container-fluid d-flex">
    <div class="row w-100">
    {% for post in posts %}
        {% if is_granted('POST', post) %}
            <div class="col-lg-6">
                <div class="card m-4">
                    <div class="card-body">
                        <h5 class="card-title">{{ post.title }}</h5>
                        <p class="card-text">{{ post.chapeau }}</p>
                        <p class="card-text">Author : {{ post.user }}</p>
                        <div class="row justify-content-between align-items-center">
                            <div class="col-sm-8">
                                <a class="btn btn-primary me-2" href="{{ path('post_show', {'id': post.id}) }}">Show</a>
                                <a class="btn btn-dark me-2" href="{{ path('admin_post_edit', { id: post.id }) }}">Edit</a>
                                {{ include('admin/post/_delete_form.html.twig') }}
                            </div>
                            <div class="col-sm-4">
                                <span>{{post.updatedAt|date('Y-m-d H:i:s')}}</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
    {% endfor %}
    </div>
</div>



{% endblock %}
