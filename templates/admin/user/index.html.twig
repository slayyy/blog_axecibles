{% extends 'admin/base.html.twig' %}

{% block title %}User index{% endblock %}

{% block admin_body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Validation</th>
                <th>Is valid</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.name }}</td>
                <td>{{ user.email }}</td>
                <td>
                    {% for role in user.roles %}
                        {% if role != user.roles|last %}
                            {{ role }}, 
                        {% else %}
                            {{ role }}
                        {% endif %}
                    {% endfor %}
                </td>
                <td>
                    <form action="{{ path('user_validation', { id: user.id }) }}" method="POST">
                        <button type="submit" class="btn">
                            {% if user.isValid %}
                                <i class="fas fa-times text-danger"></i>
                            {% else %}
                                <i class="fas fa-check text-success"></i>
                            {% endif %}
                        </button>
                    </form>
                </td>
                <td>{{ user.isValid ? 'Yes' : 'No' }}</td>
                <td>
                    {{ include('admin/user/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
