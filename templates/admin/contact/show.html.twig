{% extends 'admin/base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block admin_body %}
    <h1>Contact</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contact.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ contact.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ contact.email }}</td>
            </tr>
            <tr>
        </tbody>
    </table>

    <h3>Message</h3>

    <p class="p-3">{{ contact.message }}</p>

    {{ include('admin/contact/_delete_form.html.twig') }}
{% endblock %}
