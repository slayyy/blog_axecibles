{% extends 'base.html.twig' %}

{% block title %}Post index{% endblock %}

{% block body %}
<div class="container-fluid min-vh-100 mb-5">
    <h1>Post index</h1>
    <div class="row">
    
        {% for post in posts %}
        <div class="col-lg-4 mt-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{ post.title }}</h5>
                    <p class="card-text">{{ post.chapeau }}</p>
                    <p class="card-text">Auteur : {{ post.user }}</p>
                    <div class="d-flex justify-content-between">
                        <a class="link-primary" href="{{ path('post_show', {'id': post.id}) }}">Read</a>
                        <span>{{post.updatedAt|date('Y-m-d H:i:s')}}</span>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
